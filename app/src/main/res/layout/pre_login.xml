<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/type_sign_anonymous"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/sign1"
        android:layout_alignTop="@+id/type_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:onClick="sign_anonymous"

        android:text="SIGN ANONYMOUS" />

    <Button
        android:id="@+id/type_sign_in"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/sign1"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="SIGN IN"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/type_sign_anonymous" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/logo2"
        android:id="@+id/imageView"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>